<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Hola Xamarin!" HorizontalTextAlignment="Center" TextColor="#FFA" FontSize="36"/>
            </Frame>
            <Label Text="Hola, esta es mi primera APP con Xamarin" TextColor="Indigo" FontSize="18" Margin="4,4,4,4" Padding="30,10,30,10"/>
            <BoxView Color="#FFA" WidthRequest="100" HeightRequest="100" VerticalOptions="Center"/>
            <ActivityIndicator Color="BlueViolet" IsRunning="True"  VerticalOptions="Center"  />
            <DatePicker Format="D" VerticalOptions="CenterAndExpand"/>
            <TimePicker Format="T" VerticalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
